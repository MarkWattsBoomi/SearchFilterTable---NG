{
  "compilerOptions": {
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "downlevelIteration": true,
      "lib": [
          "dom",
          "dom.iterable",
          "esnext",
          "es2015"
        ],
      "skipLibCheck": false,
      "esModuleInterop": true
  },
  "include": [
      "./src/**/*"
  ]
}
